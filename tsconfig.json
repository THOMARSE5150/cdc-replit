{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "jsx": "preserve",
    "types": ["node", "vite/client"]
  },
  "include": ["client/src", "server", "shared"],
  "exclude": ["node_modules", "dist"]
}