{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "env": {
      "NODE_ENV": "production"
    },
    "command": "npm install"
  },
  "start": {
    "env": {
      "PORT": "8080"
    },
    "command": "ts-node server/index.ts"
  },
  "deploy": {
    "healthcheckPath": "/health"
  }
}